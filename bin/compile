#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

set -ueo pipefail

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3
BUILDPACK_DIR=$(cd "$(dirname "$(dirname "${BASH_SOURCE[0]}")")" && pwd)

YQ_BUILD_DIR="$BUILD_DIR/.yq"
YQ_CACHE_DIR="$CACHE_DIR/.yq"

YQ_VERSION="4.44.3"
if [ -f "$ENV_DIR/YQ_VERSION" ]; then
  YQ_VERSION=$(cat "$ENV_DIR/YQ_VERSION")
fi

YQ_URL="https://github.com/mikefarah/yq/releases/download/v${YQ_VERSION}/yq_darwin_amd64.tar.gz"

mkdir -p "${YQ_BUILD_DIR}"
if [[ -f "$YQ_CACHE_DIR/yq-version" ]] && grep -q "$YQ_VERSION" "$YQ_CACHE_DIR/yq-version" ; then
  echo "Using yq $YQ_VERSION from cache"
  cp "${YQ_CACHE_DIR}/*" "${YQ_BUILD_DIR}"
else
  echo "Downloading yq $YQ_VERSION from $YQ_URL"
  curl -sSf --retry 3 --retry-connrefused --connect-timeout 10 "${YQ_URL}" | tar -zx -C "${YQ_BUILD_DIR}"
  printf "%s" "$YQ_VERSION" > "$YQ_BUILD_DIR/yq-version"
  rm -rf "${YQ_CACHE_DIR}"
  mkdir -p "${YQ_CACHE_DIR}"
  cp "${YQ_BUILD_DIR}/*" "${YQ_CACHE_DIR}"
fi

echo "export PATH=\"$BUILD_DIR/.yq":\$PATH\"" >> "$BUILDPACK_DIR/export"
echo "export PATH=\"$HOME/.yq":\$PATH\"" >> "$BUILD_DIR/.profile.d/yq.sh"
